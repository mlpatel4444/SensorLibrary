<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mansi.com.sensorlibrary">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.BIND_VOICE_INTERACTION"/>
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".AvailableSensorActivity"/>

        <activity android:name=".PressureSensorActivity"/>

        <activity android:name=".LightSensorActivity"/>

        <activity android:name=".ProximitySensorActivity"/>

        <activity android:name=".AccelerometerActivity"/>

        <activity android:name=".VoiceRecordingActivity"/>

        <activity android:name=".StepCounterActivity"/>

        <activity android:name=".GyroscopeSensorActivity"/>
    </application>

</manifest>